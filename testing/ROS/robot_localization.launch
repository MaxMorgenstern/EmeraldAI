<launch>
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization" clear_params="true">

    <!-- My odometry publish at this frequency -->
    <param name="frequency" value="10"/>
    <param name="sensor_timeout" value="0.15"/>
    <param name="two_d_mode" value="true"/>

    <param name="map_frame" value="/map"/>
    <param name="odom_frame" value="/odom"/>
    <param name="base_link_frame" value="/base_link"/>
    <param name="world_frame" value="/odom"/>

    <param name="odom0" value="/odom"/>
    <param name="imu0" value="/imu_data"/>

                                   <!--
                                   x, y, z,
                                   roll, pitch, yaw,
                                   x velocity, y velocity, z velocity,
                                   roll velocity, pitch velocity, yaw velocity,
                                   x accel, y accel, z accel
                                   -->
    <rosparam param="odom0_config">[true, true, true,
                                    true, true, true,
                                    true,  true,  true,
                                    false, false, false,
                                    true,  true,  true]</rosparam>

    <rosparam param="imu0_config">[false, false, false,
                                   true,  true,  true,
                                   false, false, false,
                                   true,  true,  true,
                                   true,  true,  true]</rosparam>

    <param name="odom0_differential" value="true"/>
    <param name="imu0_differential" value="true"/>

    <!-- I want the realative position to my initial position-->
    <param name="odom0_relative" value="false"/>
    <param name="imu0_relative" value="true"/>

    <param name="imu0_remove_gravitational_acceleration" value="true"/>

    <param name="print_diagnostics" value="false"/>
    <param name="publish_tf" value="true"/>
    <param name="publish_acceleration" value="true"/>

    <param name="odom0_queue_size" value="5"/>
    <param name="imu0_queue_size" value="5"/>

  </node>
</launch>
